<div class="ms-wrapper"
          >

  
  <select name="countries[]"
          tabindex="-1"
          multiple
          id="countries[]"
                              
          class="ss-ghost-select">

                  <option value="it"  wire:key="countries[]-it" >Italy</option>
              <option value="de"  wire:key="countries[]-de" >Germany</option>
              <option value="fr"  wire:key="countries[]-fr" >France</option>
              <option value="us"  wire:key="countries[]-us" >United States</option>
          
  </select>

  <div wire:ignore="">
    <div role="button"
         aria-label=""
         tabindex="0"
         class="form-select ss-box"
    >

      <div class="text-muted ss-placeholder">
                  &nbsp;
        </div>
      <div class="ss-value-label" style="display:none;"></div>
    </div>
</div>


  
  <div class="ss-dropdown hidden"
         >

    <div class="ss-dropdown-search">

      <input type="text" class="form-control form-control-sm"
             autocomplete="off"
             placeholder="bs-blade-forms::components.custom-select.search-placeholder"/>

      <button class="btn btn-light ss-select-all"
              type="button"
              title="bs-blade-forms::components.custom-select.select-all">
        <i class="bi bi-check2-all"></i>
      </button>

      <button class="btn btn-light ss-unselect-all"
              type="button"
              title="bs-blade-forms::components.custom-select.unselect-all">
        <i class="bi bi-dash-square-dotted"></i>
      </button>
    </div>

    
    <template class="ss-option-template">
      <div class="ss-option" data-key="">
        <span></span>

        <i class="bi bi-check-lg ss-check-icon"></i>
      </div>
    </template>

    
    <div class="ss-options">
    </div>

    <div class="text-muted p-2 empty-results">
      bs-blade-forms::components.custom-select.no-results
    </div>

  </div>
</div>
